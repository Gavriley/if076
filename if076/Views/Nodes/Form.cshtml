@model if076.Entities.Node

@{
    string title;
    string method;

    if (Model == null)
    {
        title = "Add Node";
        method = "createNode()";
    }
    else
    {
        title = "Edit Node";
        method = String.Format("updateNode({0})", Model.Id);
    }
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">@title</h4>
</div>
<div class="modal-body">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Type node name" })
    </div>
    <div class="modal-footer">
        <input class="btn btn-primary pull-left" type="submit" onclick="@method" value="Save" />
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>